<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/list_item" 
	android:padding="8.0dip" 
	android:layout_width="fill_parent" 
	android:layout_height="@dimen/listing_list_height">
    <ImageView 
		android:id="@+id/PG_IMAGE" 
		android:layout_width="80.0dip" 
		android:layout_height="80.0dip" 
		android:layout_marginRight="8.0dip" 
		android:src="@drawable/placeholder" 
		android:layout_alignParentLeft="true" 
		android:contentDescription="@string/app_name" />
    <TextView 
		android:textAppearance="@android:style/TextAppearance.Small" 
		android:textStyle="bold" 
		android:id="@+id/PG_TITLE" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:textColor="@color/purple_middle"
		android:layout_toRightOf="@+id/PG_IMAGE" 
		android:layout_alignTop="@+id/PG_IMAGE" />
    <TextView 
		android:textSize="@dimen/text_size_ui_details" 
		android:textColor="@color/et_grey2" 
		android:gravity="center_vertical" 
		android:id="@+id/PG_DETAILS" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Detials" 
		android:layout_weight="1.0" 
		android:layout_toRightOf="@+id/PG_IMAGE" 
		android:layout_below="@+id/PG_TITLE" />
    <TextView 
		android:textAppearance="@android:style/TextAppearance.Small" 
		android:textStyle="bold"
		android:textColor="@color/publish_orange" 
		android:id="@+id/price" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="Shs 0.0" 
		android:layout_alignParentRight="true" 
		android:layout_alignParentBottom="true" />
    <TextView 
		android:textSize="@dimen/text_size_ui_details" 
		android:textStyle="bold"
		android:textColor="@color/et_grey2" 
		android:id="@+id/publish_date" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="hours ago" 
		android:layout_alignParentRight="true" 
		android:layout_alignParentTop="true" />
</RelativeLayout>